{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"inlineSourceMap": true,
		"rootDir": ".",
		"target": "es5",
		"declaration": false,
		"lib": ["es6", "es5", "dom"],
		"typeRoots": [
			"./node_modules/@types"
		],
		"types": [
			"node"
		]
	},
	"exclude": [
		"node_modules/**/*",
		"dist/**/*"
	]
}
